<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="site.qifen.bill">

    <application
        android:name=".util.App"
        android:allowBackup="true"
        android:icon="@drawable/bill"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bill"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.ManagerUserActivity" />
        <activity android:name=".ui.EditTypeActivity" />
        <activity android:name=".ui.SettingActivity" />
        <activity
            android:name=".ui.ViewBillActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.AddBillActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>